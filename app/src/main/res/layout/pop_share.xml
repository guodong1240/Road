<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/layout_switch"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/sharelayout_sina"
            android:layout_width="0px"
            android:layout_height="350px"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/sina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ssdk_oks_classic_sinaweibo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sina"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:textSize="12sp"
                android:text="新浪微博" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sharelayout_wechat"
            android:layout_width="0px"
            android:layout_height="350px"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ssdk_oks_classic_wechat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wechat"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:textSize="12sp"
                android:text="微信好友" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sharelayout_friendcircle"
            android:layout_width="0px"
            android:layout_height="350px"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/wechatmoments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ssdk_oks_classic_wechatmoments" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wechatmoments"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:textSize="12sp"
                android:text="微信朋友圈" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/sharelayout_qqplace"
            android:layout_width="0px"
            android:layout_height="350px"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ssdk_oks_classic_qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/qq"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:textSize="12sp"
                android:text="QQ" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>