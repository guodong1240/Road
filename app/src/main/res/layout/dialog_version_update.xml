<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="872px"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_version_update"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="146px"
            android:background="@android:color/holo_blue_dark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/update_title"
                android:textColor="@android:color/white"
                android:textSize="44px" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_title"
            android:layout_marginLeft="70px"
            android:layout_marginTop="74px"
            android:text="更新内容:"
            android:textColor="@color/upversion_text"
            android:textSize="39px" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70px"
            android:layout_marginTop="20px"
            android:textColor="@color/upversion_text"
            android:textSize="39px" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80px"
            android:layout_marginLeft="104px"
            android:layout_marginRight="104px"
            android:layout_marginTop="44px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_download"
                android:layout_width="310px"
                android:layout_height="114px"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_dark"
                android:gravity="center"
                android:text="下载更新"
                android:textColor="@android:color/white"
                android:textSize="44px" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="310px"
                android:layout_height="114px"
                android:layout_marginLeft="54px"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/upversion_text"
                android:textSize="44px" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>